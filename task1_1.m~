function task1_1(X, Y)
% Input:
%  X : M-by-D data matrix (double)
%  Y : M-by-1 label vector (unit8)
images = zeros(10,784,10);
indices = ones([1,10]);
montageVar = zeros(28,28,10);
  % 28x28 image x 10 samples x to digits
% 10 samples * 784 pixels (image row vector) * 10 classes
for i=1:size(Y,1)
    classIndex = Y(i)+1;
    sampleIndex = indices(classIndex);
    disp(classINdex
    if sampleIndex <= 10
    %display(sampleIndex);
    images(sampleIndex,:,classIndex) = X(i,:);
    montageVar(:,:,sampleIndex,classIndex) = reshape(X(i,:), 28, 28)';
    indices(classIndex) = sampleIndex + 1;
    %disp(X(i,:))
    end
end
%montage(reshape(images(1,:,1), 28, 2c),reshape(images(2,:,1), 28, 28) );
%disp(images(1,:,1));
%b = permute(reshape(images(:,:,1), 28, 28, 10),[1,2,3]);
%disp(size(b));
%montage(b(:,:,1));
%montageVar = zeros(28,28,10);
for c=1:10
%montageVar(:,:,s) = reshape(images(s,:,1), 28, 28)';  
figure, montage(montageVar(:,:,:,c));
end

%imshow(reshape(images(1,:,2), 28, 28)')
%disp(size(reshape(images(1,:,1), 28, 28)'));
end
